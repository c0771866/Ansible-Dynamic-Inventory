pipeline{
	agent {
		label 'terraformnode'
	}
	stages{
		stage('clonecode'){
			steps{
				git ""
			}
		}
		stage('setup'){
			steps{
				sh "echo ready to provision"
				sh "terraform init"
			}
		}
		stage('createInfra'){
			steps{
				sh "terraform fmt"
				sh "terraform validate"
				sh "terraform show"
				sh "terraform apply --auto-approve"
				sh "terraform show"
			}
		}
	}
}
